{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
    { "src": "api/proxy/[...slug].js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/proxy/$1" },
    { "src": "/media/(.*)", "dest": "/api/proxy/media/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
